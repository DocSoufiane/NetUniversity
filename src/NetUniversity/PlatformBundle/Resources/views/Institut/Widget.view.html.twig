{% extends "NetUniversityPlatformBundle::layout.html.twig" %}   
{% block contenu %}
<div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-check"></i> Bravo!</h4>
                {{ institut.Nom }} est créé avec succès !!
              </div>
<div style="    width: 48%;    margin-left: 31%;">

<div class="col-md-4" style="    width: 100%;" >
          <!-- Widget: user widget style 1 -->
          <div class="box box-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-yellow">
              <div class="widget-user-image">
                <img class="img-circle" src="{{ institut.urlIMAGE }}" alt="{{ institut.nom }}">
              </div>
              <!-- /.widget-user-image -->
              <h3 class="widget-user-username">{{ institut.nom }}</h3>
              <h5 class="widget-user-desc">{{ institut.University.name }}</h5>
              <h5 class="widget-user-desc">{{ institut.Localisation.nom }}</h5>
            </div>
            <div class="box-footer no-padding">
              <ul class="nav nav-stacked">
                <li><a href="#">Départements <span class="pull-right badge bg-blue">31</span></a></li>
                <li><a href="#">Filières <span class="pull-right badge bg-aqua">5</span></a></li>
                <li><a href="#">Profs <span class="pull-right badge bg-green">12</span></a></li>
                <li><a href="#">Étudiants <span class="pull-right badge bg-red">842</span></a></li>
              </ul>
            </div>
          </div>
          <!-- /.widget-user -->
        </div>
        <!-- /.col -->
</div>

{% endblock %}