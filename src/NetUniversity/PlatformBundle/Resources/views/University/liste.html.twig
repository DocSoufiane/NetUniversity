{% extends "NetUniversityPlatformBundle::layout.html.twig" %}   
{% block contenu %}   
      <h2 class="page-header">Social Widgets</h2>

      <div class="row">
      {% if is_granted('ROLE_DOYEN') %}
<a href="{{path('addUniversity')}}" class="btn btn-app">
                <i class="fa fa-fw fa-plus"></i>Ajouter Université
              </a>
              {% endif %}
              <hr>
          {% for University in listeUniversity %}

        <div class="col-md-4" >
          <!-- Widget: user widget style 1 -->
          <div class="box box-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-aqua-active">
              <div class="widget-user-image">
                <img class="img-circle" src="{{ University.urlIMAGE }}" alt="{{ University.name }}">
              </div>
              <!-- /.widget-user-image -->
              <a style ="color:#FFF;" href="{{path('ViewUniversity', {'UniversityId' : University.id})}}"><h3 class="widget-user-username">{{ University.Name }}</h3></a>
              <h5 class="widget-user-desc">{{ University.Localisation.nom }}</h5>
            </div>
            <div class="box-footer no-padding">
              <ul class="nav nav-stacked">
                <li><a href="#">Départements <span class="pull-right badge bg-blue">31</span></a></li>
                <li><a href="#">Filières <span class="pull-right badge bg-aqua">5</span></a></li>
                <li><a href="#">Profs <span class="pull-right badge bg-green">12</span></a></li>
                <li><a href="#">Étudiants <span class="pull-right badge bg-red">842</span></a></li>
              </ul>
            </div>
          </div>
          <!-- /.widget-user -->
        </div>
        <!-- /.col -->
      <!-- /.row -->
          {% else %}
            <li>Pas d'université trouvé.</li>
          {% endfor %}

{% endblock %}