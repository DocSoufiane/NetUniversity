        function likeChangeForCours(id, pathUrl){

          vals = $("#likeCours_"+id).is(':checked');
          $.ajax({

            url:pathUrl,
            type: "POST",
            dataType: "json",

            data: {
            "Cours-id" : id,
            "checkbox-value" :vals,
            },

            async: true,
